# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# User actions
GET     /users                      controllers.UserController.list
GET    /insert/user                 controllers.UserController.userGet
POST    /insert/user                controllers.UserController.userPost

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#delivery addreses
GET   /delivery-addresses/:userId/list   controllers.DeliveryAddressController.list(userId: Long)
POST /delivery-addresses/:userId   controllers.DeliveryAddressController.deliveryAddressPost(userId: Long)
GET /delivery-addresses/:userId   controllers.DeliveryAddressController.deliveryAddressGet(userId: Long)
POST /delivery-addresses/edit/:id   controllers.DeliveryAddressController.deliveryAddressPostUpdate(id: Long)
GET /delivery-addresses/edit/:id   controllers.DeliveryAddressController.deliveryAddressGetUpdate(id: Long)
